/* 登陆页面相关样式 */
.loginPage {
  height: 100%;
}
.title {
  font-size: 50rpx;
  font-weight: 500;
  height: 15%;
  line-height: 200rpx;
  padding-left: 80rpx;
}
.loginContainer {
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.inputAndButton {
  margin: 0 100rpx;
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.buttonAndRegister {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.buttonAndRegister button {
  width: 100%;
  height: 80rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  border-radius: 25rpx;
  background-color: #d43b33;
  color: white;
}
.buttonAndRegister text {
  margin-top: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #86b4d3;
}
.registerButton {
  height: 50rpx;
  line-height: 24rpx;
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 26rpx;
  color: #86b4d3;
}
/* 账号和密码区域的相关样式 */
.weui-cell {
  background-color: #f8f5fc;
  padding-left: 20rpx;
  line-height: 80rpx;
  color: #808080;
  border-radius: 20rpx;
}
.weui-input {
  height: 80rpx;
  font-size: 28rpx;
}